{
	"name": "miniapptg",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"bot:build": "tsc -p tsconfig.bot.json",
		"bot:dev": "ts-node-dev --respawn --transpile-only src/bot/start.ts",
		"bot:start": "node dist/bot/start.js"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-netlify": "^5.0.0",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"dotenv": "^16.4.7",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.0.0",
		"vite": "^6.0.0"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.49.4",
		"grammy": "^1.35.1"
	}
}
